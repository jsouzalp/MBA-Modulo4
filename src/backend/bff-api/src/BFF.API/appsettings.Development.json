{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "AutenticacaoJwksUrl": "http://localhost:5001/jwks"
  },
  "ApiSettings": {
    "AuthApiUrl": "http://localhost:5001",
    "ConteudoApiUrl": "http://localhost:5002",
    "AlunosApiUrl": "http://localhost:5003",
    "PagamentosApiUrl": "http://localhost:5004"
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "Database": 0,
    "KeyPrefix": "bff:",
    "DefaultExpiration": "00:30:00"
  },
  "ResilienceSettings": {
    "RetryCount": 3,
    "CircuitBreakerThreshold": 3,
    "CircuitBreakerDuration": "00:00:30",
    "TimeoutDuration": "00:00:30"
  },
  "CacheSettings": {
    "DashboardExpiration": "00:10:00",
    "UserProfileExpiration": "01:00:00",
    "CursoDetailsExpiration": "00:15:00",
    "RelatoriosExpiration": "00:05:00"
  },
  "CORS": {
    "AllowedOrigins": [ "http://localhost:4200" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "Content-Type", "Authorization" ]
  }
}
